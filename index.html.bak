<section class="test-section" id="test-section">
    
      
        <div>
            <div id="timer">Time: 10:00</div>
            <div id="current-chunk"><center>Current Chunk - 1</center></div>
        </div>
       
 

    <div id="test-area">
        <div id="reference-text" class="reference-outer">
            <div id="paragraph" class="paragraph">Loading...</div>
        </div>

        <textarea id="typing-input" placeholder="Start typing here..." rows="6" class="typing-input" spellcheck="false" autofocus></textarea>

        <div class="controls">
            <button id="submit-btn" class="primary-btn">Submit Test</button>
           <!-- <button id="practice-another-btn" class="link-btn">Practice Another</button>-->
        </div>
    </div>
</section>
</main>

<!-- Time over popup -->
<div id="time-over-popup" class="popup" style="display:none;">
    <div class="popup-inner">
        <p>Time is over. View results?</p>
        <button id="popup-ok-btn" class="primary-btn">Yes</button>
    </div>
</div>

<!-- No input popup -->
<div id="no-input-popup" class="popup" style="display:none;">
    <div class="popup-inner">
        <p>No typed input detected.</p>
        <button id="no-input-ok-btn" class="primary-btn">OK</button>
    </div>
</div>

<script src="script.js"></script>
<script>
window.addEventListener("beforeunload", () => {
  localStorage.removeItem("selectedExerciseText");
  localStorage.removeItem("selectedExerciseLanguage");
});
</script>
<script src="script.js"></script>
